<h1>List of photos</h1>

<form action="/add_photo" method="post">
  <label for="img_field">Image</label>
  <input id="img_field" type="text" name="image" placeholder="Enter a URL for the image">
  <label for="cap_field">Caption</label>
  <textarea id="cap_field" type="text" name="caption" placeholder="Enter a caption for the photo..."></textarea>
  <label for="id_field">Owner ID</label>
  <input id="id_field" type="text" name="id" placeholder="Enter an ID of a User">
  <button>
    Add photo
  </button>
</form>

<hr>

<table border = "1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @list_of_photos.each do |a_photo| %>
    <tr>
      <td>
        <img src="<%= a_photo.image %>">
      </td>
      <td>
        <%= a_photo.caption %>
      </td>
      <td>
        <%= a_photo.poster.username %>
      </td>
      <td>
        <%= a_photo.created_at %>
      </td>
      <td>
        <a href="/photos/<%= a_photo.id %>">Show Details</a>
      </td>
    </tr>
  <% end %>
</table>
