<h1>Photo details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @the_photo.image %>"></dd>

  <dt>Caption</dt>
  <div>
    <dd><%= @the_photo.caption %></dd>
  </div>
  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/edit_photo/<%= @the_photo.id %>" method="post">
      <label for="img_field">Image</label>
      <input id="img_field" type="text" name="image" value="<%= @the_photo.image %>">
      <label for="cap_field">Caption</label>
      <textarea id="cap_field" type="text" name="caption"><%= @the_photo.caption %></textarea>
      <button>
        Update photo
      </button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a></dd>
</dl>

<h2>Comments</h2>

<table border="1">
  <tr>
    <th>Commentor</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @matching_comments.each do |a_comment| %>
    <tr>
      <td>
        <%= User.where({:id => a_comment.author_id}).first.username %>
      </td>
      <td>
        <%= a_comment.body %>
      </td>
      <td>
        <%= a_comment.created_at %>
      </td>
    </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>
<form action="/add_comment/<%= @the_photo.id %>" method="post">
      <label for="img_field">Photo ID</label>
      <input id="img_field" type="text" name="photo" value="<%= @the_photo.id %>">
      <label for="author_field">Author ID</label>
      <input id="author_field" type="text" name="author" placeholder="Enter your author ID">
      <label for="cap_field">Comment</label>
      <textarea id="cap_field" type="text" name="body" placeholder="Enter a comment..."></textarea>
      <button>
        Add comment
      </button>
</form>
